<config>
    <modules>
        <RicoNeitzel_PaymentFilter>
            <version>1.1.0</version>
        </RicoNeitzel_PaymentFilter>
    </modules>
    <global>
        <models>
            <payfilter>
                <class>RicoNeitzel_PaymentFilter_Model</class>
            </payfilter>
            <payment>
                <rewrite>
                    <method_free>RicoNeitzel_PaymentFilter_Model_Payment_Method_Free</method_free>
                </rewrite>
            </payment>
        </models>
        <resources>
            <payfilter_setup>
                <setup>
                    <module>RicoNeitzel_PaymentFilter</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </payfilter_setup>
        </resources>
        <helpers>
            <payfilter>
                <class>RicoNeitzel_PaymentFilter_Helper</class>
            </payfilter>
        </helpers>
        <blocks>
            <adminhtml>
                <rewrite>
                    <customer_group_edit_form>RicoNeitzel_PaymentFilter_Block_Adminhtml_Group_Form</customer_group_edit_form>
                </rewrite>
            </adminhtml>
        </blocks>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <product_payment_methods/>
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <events>
            <controller_front_init_before>
                <observers>
                    <payfilter>
                        <type>singleton</type>
                        <class>payfilter/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </payfilter>
                </observers>
            </controller_front_init_before>
        </events>
    </global>

    <frontend>
        <events>
            <customer_group_save_before>
                <observers>
                    <payfilter>
                        <type>singleton</type>
                        <class>payfilter/observer</class>
                        <method>customerGroupSaveBefore</method>
                    </payfilter>
                </observers>
            </customer_group_save_before>
            <customer_group_load_after>
                <observers>
                    <payfilter>
                        <type>singleton</type>
                        <class>payfilter/observer</class>
                        <method>customerGroupLoadAfter</method>
                    </payfilter>
                </observers>
            </customer_group_load_after>
            <payment_method_is_active>
                <observers>
                    <payfilter>
                        <type>singleton</type>
                        <class>payfilter/observer</class>
                        <method>paymentMethodIsActive</method>
                    </payfilter>
                </observers>
            </payment_method_is_active>
        </events>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <RicoNeitzel_PaymentFilter>
                    <files>
                        <default>RicoNeitzel_PaymentFilter.csv</default>
                    </files>
                </RicoNeitzel_PaymentFilter>
            </modules>
        </translate>
        <events>
            <customer_group_save_before>
                <observers>
                    <payfilter>
                        <type>singleton</type>
                        <class>payfilter/observer</class>
                        <method>customerGroupSaveBefore</method>
                    </payfilter>
                </observers>
            </customer_group_save_before>
            <customer_group_load_after>
                <observers>
                    <payfilter>
                        <type>singleton</type>
                        <class>payfilter/observer</class>
                        <method>customerGroupLoadAfter</method>
                    </payfilter>
                </observers>
            </customer_group_load_after>
            <catalog_product_save_before>
                <observers>
                    <payfilter>
                        <type>singleton</type>
                        <class>payfilter/observer</class>
                        <method>catalogProductSaveBefore</method>
                    </payfilter>
                </observers>
            </catalog_product_save_before>
        </events>
    </adminhtml>

    <default>
        <checkout>
            <payfilter>
                <disable_ext>0</disable_ext>
            </payfilter>
        </checkout>
    </default>

</config>
